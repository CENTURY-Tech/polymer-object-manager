{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "src",
    "typings"
  ],
  "exclude": [
    "bower_components",
    "node_modules"
  ]
}
