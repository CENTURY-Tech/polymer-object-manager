{
  "name": "ct-object-management",
  "version": "0.0.3",
  "scripts": {
    "prebuild:main": "npm run clean:build-main",
    "prebuild:test": "npm run clean:build-test",
    "prebuild:ts-main": "npm run lint:main",
    "prebuild:ts-test": "npm run lint:test",
    "build": "npm run build:main && npm run build:test",
    "build:main": "npm run build:ts-main && npm run build:html-main",
    "build:test": "npm run build:ts-test && npm run build:html-test",
    "build:ts-main": "tsc -p tsconfig-main.json",
    "build:ts-test": "tsc -p tsconfig-test.json",
    "build:html-main": "(cd src/main && tar -cf - `find . -name '*.html'`) | tar -xf -",
    "build:html-test": "(cd src/test && tar -cf - `find . -name '*.html'`) | (cd test && tar -xf -)",
    "clean": "npm run clean:build",
    "clean:build": "npm run clean:build-main && npm run clean:build-test",
    "clean:build-main": "rm -drf object-management.* utils",
    "clean:build-test": "rm -drf test",
    "install": "bower i && typings i",
    "lint": "npm run lint:main && npm run lint:test",
    "lint:main": "tslint --project tsconfig-main.json -c ./node_modules/@ctek/gulp-tasks/linting/tslint.json --fix",
    "lint:test": "tslint --project tsconfig-test.json -c ./node_modules/@ctek/gulp-tasks/linting/tslint.json --fix",
    "preserve": "npm run build",
    "serve": "polymer serve -H 0.0.0.0",
    "start": "npm run serve",
    "symbuild": "[[ -e $SYMBUILD_PATH ]] && npm run symbuild:ts && npm run symbuild:html || echo 'Please set \"SYMBUILD_PATH\"'",
    "symbuild:ts": "tsc -p tsconfig-main.json --outDir $SYMBUILD_PATH",
    "symbuild:html": "(cd src/main && tar -cf - `find . -name '*.html'`) | (cd $SYMBUILD_PATH && tar -xf -)",
    "pretest": "npm run build",
    "test": "polymer test"
  },
  "dependencies": {},
  "devDependencies": {
    "@ctek/gulp-tasks": "6.0.6",
    "@ctek/typed-utils": "1.1.1",
    "@types/chai": "4.0.0",
    "@types/es6-shim": "0.31.32",
    "@types/mocha": "2.2.39",
    "@types/polymer-ts": "0.1.28",
    "bower": "1.8.0",
    "polymer-cli": "0.17.0",
    "ramda": "0.23.0",
    "tslint": "5.4.3",
    "typescript": "2.3.4",
    "typings": "2.1.1"
  }
}
